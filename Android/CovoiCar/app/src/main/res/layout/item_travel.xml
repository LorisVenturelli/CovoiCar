<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageCar"
            android:src="@drawable/ic_car" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#33b5e5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/dayInfo"
            android:layout_toRightOf="@+id/imageCar"
            android:layout_toEndOf="@+id/imageCar"
            android:paddingEnd="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#33b5e5"
            android:text="-"
            android:layout_toRightOf="@id/dayInfo"
            android:id="@+id/separation"
            android:layout_alignBottom="@+id/dayInfo"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#33b5e5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/hourInfo"
            android:layout_toRightOf="@+id/separation"
            android:layout_toEndOf="@+id/separation"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/startTravel"
            android:layout_alignBottom="@+id/imageCar"
            android:layout_alignLeft="@+id/dayInfo"
            android:layout_alignStart="@+id/dayInfo"
            android:paddingEnd="10dp"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">>"
            android:id="@+id/direction"
            android:layout_alignTop="@+id/startTravel"
            android:layout_toRightOf="@+id/startTravel"
            android:layout_toEndOf="@+id/startTravel"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/arrivalTravel"
            android:paddingLeft="10dp"
            android:layout_above="@+id/relativeMore"
            android:layout_toRightOf="@+id/direction"
            android:layout_toEndOf="@+id/direction"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/priceInfo"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/separation"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <View
            android:id="@+id/view13"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#cfcfcf"
            android:layout_below="@+id/startTravel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view13"
            android:id="@+id/relativeMore"
            android:paddingTop="10dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/infoPlace"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/numberPlace"
                android:layout_toEndOf="@+id/numberPlace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numberPlace"
                android:id="@+id/numberPlace"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingEnd="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeMore">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/distance"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:layout_toRightOf="@+id/distance"
                android:id="@+id/separation3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/separation3"
                android:text="New Text"
                android:id="@+id/duration" />


        </RelativeLayout>
    </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>