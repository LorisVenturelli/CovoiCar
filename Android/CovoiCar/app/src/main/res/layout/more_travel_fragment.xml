<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeDateInfo"
            android:layout_centerHorizontal="true"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20dp"
                android:textColor="#33b5e5"
                android:text="Large Text"
                android:id="@+id/infoDateTravel"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/separation"
                android:layout_toStartOf="@+id/separation"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#33b5e5"
                android:textSize="20dp"
                android:text="-"
                android:id="@+id/separation"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20dp"
                android:textColor="#33b5e5"
                android:text="Large Text"
                android:id="@+id/infoTimeTravel"
                android:layout_toRightOf="@+id/separation"/>


        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#cfcfcf"
            android:layout_below="@+id/relativeDateInfo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeStart"
            android:layout_below="@id/view1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageStart"
                android:src="@drawable/ic_start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:id="@+id/infoStartTravel"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageStart"
                android:layout_toEndOf="@+id/imageStart" />

        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#cfcfcf"
            android:layout_below="@+id/relativeStart"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeArrival"
            android:layout_below="@id/view2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageArrival"
                android:src="@drawable/ic_arrival"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:id="@+id/infoEndTravel"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageArrival"
                android:layout_toEndOf="@+id/imageArrival" />
        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#cfcfcf"
            android:layout_below="@+id/relativeArrival"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeMapInfo"
            android:layout_below="@+id/view3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageMap"
                android:src="@drawable/ic_map"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/infoMapTravelKilo"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageMap"
                android:layout_toEndOf="@+id/imageMap" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/separation2"
                android:layout_toRightOf="@+id/infoMapTravelKilo"
                android:layout_toEndOf="@+id/infoMapTravelKilo"
                android:layout_centerVertical="true"
                android:paddingEnd="5dp"
                android:paddingStart="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/infoMapTravelTime"
                android:layout_toRightOf="@+id/separation2"
                android:layout_toEndOf="@+id/separation2"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:id="@+id/view8"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#cfcfcf"
            android:layout_below="@+id/relativeMapInfo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeNameUser"
            android:layout_below="@+id/view8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageNameUser"
                android:src="@drawable/ic_user_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/infoNameUser"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageNameUser"
                android:layout_toEndOf="@+id/imageNameUser"
                android:paddingEnd="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/infoLastNameUser"
                android:layout_toRightOf="@+id/infoNameUser"
                android:layout_toEndOf="@+id/infoNameUser"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#cfcfcf"
            android:layout_below="@+id/relativeNameUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeEmailUser"
            android:layout_below="@+id/view4">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageEmail"
                android:src="@drawable/ic_action_email"
                android:paddingEnd="7dp"
                android:paddingStart="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/infoEmailUser"
                android:layout_toRightOf="@+id/imageEmail"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#cfcfcf"
            android:layout_below="@+id/relativeEmailUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view5"
            android:id="@+id/relativePhoneUser">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/infoPhoneUser"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imagePhone"
                android:layout_toEndOf="@+id/imagePhone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagePhone"
                android:src="@drawable/ic_phone"/>
        </RelativeLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#cfcfcf"
            android:layout_below="@+id/relativePhoneUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view6"
            android:id="@+id/relativeBioUser">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/infoBioUser"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageBio"
                android:layout_toEndOf="@+id/imageBio" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageBio"
                android:src="@drawable/ic_quote"/>
        </RelativeLayout>

        <View
            android:id="@+id/view7"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#cfcfcf"
            android:layout_below="@+id/relativeBioUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reservez"
            android:id="@+id/buttonReserved"
            android:layout_below="@+id/relativeBioUser"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>